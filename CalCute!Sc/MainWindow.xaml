<Window x:Class="CalCute_Sc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalCute_Sc"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="CalCute!" Height="492" Width="594" Background="#FFFFD6EE">

    <Grid Margin="0,0,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                    x:Name="PantallaNum"
                    Text="0"
                    FontSize="72"
                    Background="LightYellow"
                    IsReadOnly="False"
                    Margin="10,10,6,10"
                    BorderThickness="0"
                    FontFamily="CutePixel"
                     
                    
                     />
            <Button  
                x:Name="BotSiete"
                Click="Num_Click"
                     Grid.Row="2"
                     Grid.Column="0"
                     Content="7"
                     FontSize="72"
                    FontFamily="CutePixel"
                    Margin="6"
                    Background="White"
                    BorderThickness="0"
                />

            <Button 
                x:Name="BotOcho"
                Click="Num_Click"
                    Grid.Row="2"
                    Grid.Column="1"
                    Content="8"
                    FontSize="72"
                    FontFamily="CutePixel"
                    Margin="6"
                    Background="White"
                    BorderThickness="0"
                />

            <Button 
                x:Name="BotNueve"
                Click="Num_Click"
                    Grid.Row="2"
                    Grid.Column="2"
                    Content="9"
                    FontSize="72"
                    FontFamily="CutePixel"
                    Margin="6"
                    Background="White"
                    BorderThickness="0"   
                />
            <Button 
                x:Name="BotCuatro"
                Click="Num_Click"
                    Grid.Row="3"
                    Grid.Column="0"
                    Content="4"
                    FontSize="72"
                    FontFamily="CutePixel"
                    Margin="6"
                    Background="White"
                    BorderThickness="0"   
                />
            <Button 
                x:Name="BotCinco"
                Click="Num_Click"
                    Grid.Row="3"
                    Grid.Column="1"
                    Content="5"
                    FontSize="72"
                    FontFamily="CutePixel"
                    Margin="6"
                    Background="White"
                    BorderThickness="0"   
                />
            <Button 
                x:Name="BotSeis"
                Click="Num_Click"
                    Grid.Row="3"
                    Grid.Column="2"
                    Content="6"
                    FontSize="72"
                    FontFamily="CutePixel"
                    Margin="6"
                    Background="White"
                    BorderThickness="0"   
                />
            <Button 
                x:Name="BotUno"
                Click="Num_Click"
                    Grid.Row="4"
                    Grid.Column="0"
                    Content="1"
                    FontSize="72"
                    FontFamily="CutePixel"
                    Margin="7"
                    Background="White"
                    BorderThickness="0"   
                />
            <Button 
                  x:Name="BotDos"
                Click="Num_Click"
                    Grid.Row="4"
                    Grid.Column="1"
                    Content="2"
                    FontSize="72"
                    FontFamily="CutePixel"
                    Margin="6"
                    Background="White"
                    BorderThickness="0"   
                />
            <Button 
                  x:Name="BotTres"
                Click="Num_Click"
                    Grid.Row="4"
                    Grid.Column="2"
                    Content="3"
                    FontSize="72"
                    FontFamily="CutePixel"
                    Margin="6"
                    Background="White"
                    BorderThickness="0"   
                />
            <Button 
                x:Name="BotCero"
                Click="Num_Click"
                    Grid.Row="5"
                    Grid.Column="1"
                    Content="0"
                    FontSize="72"
                    FontFamily="CutePixel"
                    Margin="6"
                    Background="White"
                    BorderThickness="0"   
                />

            <Button
                x:Name="BotSign"
                Click="Sign_Click"
                    Grid.Row="5"
                    Grid.Column="0"
                    Content="+/-"
                    FontSize="72"
                    FontFamily="CutePixel"
                    Margin="6"
                    Background="White"
                    BorderThickness="0"   
            />
            <Button 
                x:Name="BotPunto"
                Click="Punto_Click"
                    Grid.Row="5"
                    Grid.Column="2"
                    Content="."
                    FontSize="72"
                    FontFamily="CutePixel"
                    Margin="6"
                    Background="White"
                    BorderThickness="0"   
            />
            <Button 
                x:Name="BotDiv"
                Click="Op_Click"
                    Grid.Row="1"
                    Grid.Column="3"
                    Content="÷"
                    FontSize="72"
                    FontFamily="CutePixel"
                    Margin="6"
                    Background="White"
                    BorderThickness="0"   
            />
            <Button 
                  x:Name="BotMult"
                    Click="Op_Click"
                    Grid.Row="2"
                    Grid.Column="3"
                    Content="x"
                    FontSize="72"
                    FontFamily="CutePixel"
                    Margin="6"
                    Background="White"
                    BorderThickness="0"   
            />
            <Button
                x:Name="BotMas"
                Click="Op_Click"
                Grid.Row="3"
                Grid.Column="3"
                Content="+"
                FontSize="72"
                FontFamily="CutePixel"
                Margin="6"
                Background="White"
                BorderThickness="0"   
            />
            <Button 
                x:Name="BotMenos"
                Click="Op_Click"
                Grid.Row="4"
                Grid.Column="3"
                Content="-"
                FontSize="72"
                FontFamily="CutePixel"
                Margin="6"
                Background="White"
                BorderThickness="0"   
            />
            <Button 
                x:Name="BotIgual"
                Click="Res_Click"
                Grid.Row="5"
                Grid.Column="3"
                Content="="
                FontSize="72"
                FontFamily="CutePixel"
                Margin="6"
                Background="White"
                BorderThickness="0"   
            />
            <Button 
                x:Name="BotAtras"
                Click="Atras_Click"
                Grid.Row="0"
                Grid.Column="3"
                Content="←"
                FontSize="72"
                FontFamily="CutePixel"
                Margin="6"
                Background="White"
                BorderThickness="0"   
            />

            <Button 
                x:Name="BotClear"
                Click="Clear_Click"
                Grid.Row="1"
                Grid.Column="2"
                Content="AC"
                FontSize="72"
                FontFamily="CutePixel"
                Margin="6"
                Background="White"
                BorderThickness="0"   
                
            />
            <Button 
                x:Name="BotSqrt"
                Click="Op_Click"
                Grid.Row="1"
                Grid.Column="1"
                Content="x²"
                FontSize="72"
                FontFamily="CutePixel"
                Margin="6"
                Background="White"
                BorderThickness="0"   
    
            />


            <Grid/>
        </Grid>


    </Grid>
</Window>